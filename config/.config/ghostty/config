# Shell (ensure fish regardless of SHELL env var)
command = /opt/homebrew/bin/fish

# Font (FiraCode Nerd Font Mono, matching iTerm2 profile)
font-family = FiraCode Nerd Font Mono
font-style = SemBd
font-style-bold = Bold
font-size = 15
font-feature = -calt
font-thicken = true
font-thicken-strength = 200
adjust-cell-height = 5%
adjust-cell-width = -2%

# Colors (custom Rose Pine dark, matching iTerm2 background)
background = #252C33
foreground = #DCDCDC
cursor-color = #82BCBD
cursor-text = #000000
selection-background = #BAD5FB
selection-foreground = #000000

# ANSI palette (carried over from iTerm2 profile)
palette = 0=#121315
palette = 1=#B43C29
palette = 2=#00C200
palette = 3=#C7C400
palette = 4=#2743C7
palette = 5=#C03FBE
