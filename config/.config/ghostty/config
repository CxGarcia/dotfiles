# Cursor
cursor-style = block
cursor-style-blink = true

# Window
window-padding-x = 8
window-padding-y = 4
window-padding-color = extend
window-save-state = always
minimum-contrast = 1

# macOS
macos-titlebar-style = tabs
macos-option-as-alt = true
macos-non-native-fullscreen = true

# Mouse
mouse-hide-while-typing = true
copy-on-select = true
clipboard-trim-trailing-spaces = true

# Shell integration (fish auto-detected, no-cursor preserves block cursor at prompt)
shell-integration-features = no-cursor,sudo,title

# Keybindings: word navigation (replicates iTerm2 keybindings)
keybind = alt+left=text:\x1bb
keybind = alt+right=text:\x1bf
keybind = alt+backspace=text:\x1b\x7f
keybind = super+backspace=text:\x15
keybind = super+left=text:\x01
keybind = super+right=text:\x05
