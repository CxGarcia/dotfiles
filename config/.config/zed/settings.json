{
    "features": {
        "edit_prediction_provider": "zed"
    },
    "edit_predictions": {
        "disabled_globs": [".env"]
    },
    "gutter": {
        "folds": false,
        "runnables": true
    },
    "vim_mode": true,
    "relative_line_numbers": "enabled",
    "ui_font_size": 16,
    "buffer_font_size": 14,
    "ui_font_family": "FiraMono Nerd Font",
    "buffer_font_features": {
        "calt": false
    },
    "command_aliases": {
        "W": "w",
        "Wq": "wq",
        "Q": "q"
    },
    "scrollbar": {
        "show": "never"
    },
    "vim": {
        "use_system_clipboard": "always",
        "use_smartcase_find": true,
        "highlight_on_yank_duration": 200,
        "toggle_relative_line_numbers": true
    },
    "theme": {
        "dark": "cx-dark",
        "mode": "system",
        "light": "One Light"
    },
    "tab_size": 4,
    "hard_tabs": false,
    "use_smartcase_search": true,
    "current_line_highlight": "line",
    "vertical_scroll_margin": 8,
    "soft_wrap": "none",
    "auto_indent": true,
    "linked_edits": true,
    "inlay_hints": {
        "enabled": true
    },
    "languages": {
        "YAML": {
            "format_on_save": "off"
        },
        "JavaScript": {
            "format_on_save": "on",
            "formatter": [],
            "code_actions_on_format": {
                "source.fixAll.eslint": true
            }
        },
        "TypeScript": {
            "format_on_save": "on",
            "formatter": [],
            "code_actions_on_format": {
                "source.fixAll.eslint": true
            }
        },
        "TSX": {
            "format_on_save": "on",
            "formatter": [],
            "code_actions_on_format": {
                "source.fixAll.eslint": true
            }
        },
        "Markdown": {
            "soft_wrap": "editor_width"
        }
    },
    "lsp": {
        "biome": {
            "settings": {
                "require_config_file": true
            }
        }
    },
    "terminal": {
        "font_family": "Fira Code",
        "working_directory": "first_project_directory",
        "font_size": 14
    },
    "project_panel": {
        "dock": "right",
        "indent_size": 14
    }
}
